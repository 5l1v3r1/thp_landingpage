<% provide(:title, "Home") %>

	<% if user_signed_in? %>
	<h4 class="main-title">Bienvenue <strong><%= current_user.firstname %>. </strong>Connecté en tant que  <strong><%= current_user.email %>.</strong>
	<%= link_to "Déconnexion", destroy_user_session_path, method: :delete, class: "btn btn-primary", id: "dec" %></h4>
	<h4 class="main-title"><i class="em em-arrow_double_down"></i> Pour utiliser FindForMe vous devez vous <strong>Connecter</strong> ou bien vous <strong>Inscrire</strong> <i class="em em-arrow_double_down"></i><h4>
		<%=  link_to "Inscription", new_user_registration_path , class: "btn btn-success", id: "ins" %>  
		<%=  link_to "Connexion", new_user_session_path , class: "btn btn-success ", id: "con" %> 
	<% else %>
	<div class="first-d">
		<div id="first-d-vids"> <video autoplay loop muted> <source src="/assets/mainVids.mp4" type="video/mp4"> </video> </div>
		<div class="header-slogan">
			<div class="hidden header-slogan-txt">
				<h1 class="header-slogan-h1">Trouver un stage n'a jamais était aussi facile<i class="em em-mortar_board"></i></h1>
			</div>
			<a href="contact.html" class="header-slogan-btn">Contactez-nous</a>
		</div>
	</div>
	<div class="second-d">
		<div class="container-tem">
			<div class="tem-main">
				<%= image_tag("PP1.jpg",size: "300x300", :alt => "Profil Image",:class => "PP1") %>
				<blockquote>
					<p> " Grâce à FindForMe j'ai trouvé un stage en 1 semaine." <br><span id="name-tem">Pierre - Lycéen Strasbourgoie</span></p>
				</blockquote>
			</div>
			<div class="tem-second">
					<%= image_tag("PP2.jpg",size: "300x300", :alt => "Profil Image",:class => "PP2") %>
					<blockquote>
						<p> " Contrat d'alternance signé ! Merci " <br><span id="name-tem">Marie - Étudiante Parisienne</span></p>
					</blockquote>
				</div>
		</div>
	</div>
	<div class="third-d">
		<div class="container-inf">
			<div class="inf-row row">
				<div class="inf-ic city-inf col-sm">
					<i class="fas fa-map-marked-alt"></i>
					<h2><span id="inf-map">3</span><br>Villes</h2>
				</div>
				<div class="inf-ic stg-inf col-sm">
					<i id="inf-users" class="fas fa-users"></i>
					<h2><span>236</span><br>Stage</h2>
				</div>
			</div>
		</div>
	</div>
	<% end %>




